<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:WeatherApp.View"
    xmlns:model="clr-namespace:WeatherApp.Model"
    Shell.FlyoutBehavior="Disabled">



    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate view:HomePage}" />
        </Tab>

        <Tab Title="Favourites">
            <ShellContent ContentTemplate="{DataTemplate view:FavouritesPage}" />
        </Tab>

        <Tab Title="About">
            <ShellContent ContentTemplate="{DataTemplate view:AboutPage}" />
        </Tab>
    </TabBar>
</Shell>

